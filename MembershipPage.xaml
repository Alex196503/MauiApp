<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppBazaSportiva.MembershipPage"
             Title="MembershipPage">
    <ContentPage.Content>
        <StackLayout Margin="20" Spacing="20">
            <Editor Placeholder="Introdu numele abonamentului" Margin="20"
                   Text="{Binding MembershipName}"
                   HeightRequest="50"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Text="Salveaza abonamentul" Grid.Row="0" Grid.Column="0" MaximumWidthRequest="200"
                       Clicked="OnSaveButtonClicked" HorizontalOptions="FillAndExpand"/>
                <Button Grid.Column="1"
                    Text="Sterge abonamentul" Grid.Row="0" MaximumWidthRequest="200"
                    Clicked="OnDeleteButtonClicked" HorizontalOptions="FillAndExpand"/>
                <ListView Grid.Row="1" Grid.Column="0" x:Name="listView" Margin="20" IsRefreshing="True" SelectedItem="{Binding SelectedMembership}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding MembershipName}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button Grid.Row="2" Grid.Column="0" Text="Adauga abonamentul pentru membrii" FontSize="16" HeightRequest="50" WidthRequest="250" HorizontalOptions="Center" VerticalOptions="Center"
                MaximumWidthRequest="200"
 Clicked="OnAddButtonClicked" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>